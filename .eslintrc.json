{
  "extends": ["standard", "next/core-web-vitals", "plugin:tailwindcss/recommended", "prettier"],
  "plugins": ["tailwindcss"],
  "settings": {
    "tailwindcss": {
      "callees": ["cn", "clsx"]
    }
  },
  "rules": {
    "no-undef": "off",
    "spaced-comment": "off",
    "no-unused-vars": "error",
    "no-console": "warn"
  }
}
